<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="app.listener.locale" class="Ndewez\WebHome\CommonBundle\EventListener\LocaleListener">
            <argument>%locale%</argument>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="app.listener.user_locale" class="Ndewez\WebHome\CommonBundle\EventListener\UserLocaleListener">
            <argument type="service" id="session"/>
            <tag name="kernel.event_listener" event="security.interactive_login" method="onInteractiveLogin" />
        </service>

    </services>
</container>
