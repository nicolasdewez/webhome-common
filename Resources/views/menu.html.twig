<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
        {% for menu in app.session.get(constant('Ndewez\\WebHome\\CommonBundle\\EventListener\\MenuListener::KEY')) %}

            {% if not menu.hasItem %}
                <li{% if menu.active %} class="active"{% endif %}>
                    <a href="{{ menu.href }}">{{ menu.title|trans }}{% if menu.active %}<span class="sr-only">(current)</span>{% endif %}</a>
                </li>
            {% else %}
                <li class="dropdown{% if menu.active %} active{% endif %}" >
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ menu.title|trans }} <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        {% for item in menu.items %}
                            {% if item.divider %}
                                <li class="divider"></li>
                            {% else %}
                                <li><a href="{{ item.href }}">{{ item.title|trans }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </li>
            {% endif %}

        {% endfor %}

